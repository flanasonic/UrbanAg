{
  "include": [
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "src/client/static/*",
    "src/server/*"
  ],
  "compilerOptions": {
    "baseUrl": "src/client",
    "moduleResolution": "node",
    "target": "es2017",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["svelte"],
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
      ]
  }
}